<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerError"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sand_yellow">

    <com.anetos.parkme.customlib.IconTextView
        android:id="@+id/warningIcon"
        style="@style/IconWarning"
        android:layout_marginStart="@dimen/generic_slide_down_popup_error_icon_horizontal_margin"
        android:layout_marginTop="@dimen/generic_slide_down_popup_error_icon_vertical_margin" />

    <LinearLayout
        android:id="@+id/warningDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/generic_slide_down_popup_error_icon_horizontal_margin"
        android:layout_marginTop="@dimen/generic_slide_down_popup_error_description_vertical_margin"
        android:layout_marginEnd="@dimen/generic_slide_down_popup_error_icon_horizontal_margin"
        android:layout_marginBottom="@dimen/generic_slide_down_popup_error_description_vertical_margin"
        android:layout_toEndOf="@+id/warningIcon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popupTextErrorTitle"
            style="@style/NoteTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_internet" />

        <TextView
            android:id="@+id/popupTextErrorMessage"
            style="@style/NoteBodyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_internet_msg"
            android:textAlignment="textStart" />
    </LinearLayout>
</RelativeLayout>
