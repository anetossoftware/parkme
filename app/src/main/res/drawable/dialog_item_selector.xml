<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <ripple android:color="?attr/appSecondaryColor">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/appSurfaceColor" />
                    <corners android:radius="@dimen/spacing_small" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <ripple android:color="?attr/appSurfaceColor">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/appBackgroundColor" />
                    <corners android:radius="@dimen/spacing_small" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>