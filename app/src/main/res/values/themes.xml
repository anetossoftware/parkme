    <style name="DialogSectionItem" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/size_extra_small</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
    </style>

    <style name="NoteTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NoteBodyTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/size_tiny</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ExpiryDateTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/appSecondaryColor</item>
        <item name="android:textSize">@dimen/size_extra_tiny</item>
        <item name="fontFamily">@font/nunito_semibold_italic</item>
    </style>

    <style name="BankCardTypeTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:textSize">@dimen/size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/nunito_extrabold_italic</item>
    </style>

    <style name="WalletCardTypeTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:textSize">@dimen/size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/nunito_extrabold_italic</item>
    </style>

    <style name="NoteTitleEditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/size_huge</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:textColorHint">?attr/appSecondaryColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="NoteBodyEditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="PlaceholderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_extra_huge</item>
        <item name="android:textColor">?attr/appSecondaryColor</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?attr/appSurfaceColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_small</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColorHint">?attr/appSecondaryColor</item>
        <item name="android:textColorHighlight">?attr/appSecondaryColor</item>
        <item name="android:colorControlActivated">?attr/appPrimaryColor</item>
    </style>

    <style name="LabelItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_normal</item>
        <item name="android:background">@drawable/label_item_shape</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textDirection">anyRtl</item>
    </style>

    <style name="LabelItemWithoutStoke" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_normal</item>
        <item name="android:background">@drawable/label_item_shape_without_stroke</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textDirection">anyRtl</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="AddressTextInputEditText">
        <item name="android:focusable">true</item>
        <item name="android:autoLink">all</item>
        <item name="android:gravity">top</item>
        <item name="android:minLines">4</item>
        <item name="maxLines">5</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="MaterialButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/appPrimaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/appBackgroundColor</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">@dimen/spacing_small</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="MaterialSecondaryButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/appBackgroundColor</item>
        <item name="strokeColor">?attr/appPrimaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">@dimen/spacing_small</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="ProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="android:contentDescription">@string/loading</item>
        <item name="indicatorColor">?attr/appPrimaryColor</item>
        <item name="indicatorSize">50dp</item>
        <item name="trackColor">?attr/appBackgroundColor</item>
        <item name="trackCornerRadius">@dimen/spacing_extra_large</item>
        <item name="trackThickness">5dp</item>
    </style>

    <style name="Snackbar" parent="Widget.Material3.Snackbar">
        <item name="android:layout_margin">@dimen/spacing_normal</item>
    </style>

    <style name="SnackbarTextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:textDirection">anyRtl</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="IconItem" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:background">@drawable/dialog_item_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
    </style>

    <style name="ExtendedFab" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:textColor">?attr/appBackgroundColor</item>
        <item name="backgroundTint">?attr/appPrimaryColor</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="AddExtendedFab" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:layout_gravity">top|end</item>
        <item name="android:textColor">?attr/appBackgroundColor</item>
        <item name="backgroundTint">?attr/appPrimaryColor</item>
        <item name="android:elevation">@dimen/elevation_none</item>
        <item name="icon">@drawable/ic_round_add_24</item>
        <item name="iconTint">@color/white</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="CancelExtendedFab" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/appBackgroundColor</item>
        <item name="backgroundTint">?attr/appPrimaryColor</item>
        <item name="android:elevation">@dimen/elevation_none</item>
        <item name="icon">@drawable/ic_round_close_24</item>
        <item name="iconTint">@color/white</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="TabItemTextAppearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@drawable/generic_shape</item>
        <item name="tabIconTint">@drawable/tab_icon_color_selector</item>
        <item name="tabIndicator">@drawable/tab_indicator_shape</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">?attr/appPrimaryColor</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabSelectedTextColor">?attr/appBackgroundColor</item>
        <item name="tabTextAppearance">@style/TabItemTextAppearance</item>
        <item name="tabTextColor">?attr/appPrimaryColor</item>
        <item name="tabIndicatorAnimationDuration">500</item>
    </style>

    <style name="IconWarning">
        <item name="android:layout_width">@dimen/warning_icon_size</item>
        <item name="android:layout_height">@dimen/warning_icon_size</item>
        <item name="android:text">@string/fa_warning_sign</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
    </style>

    <style name="GenericPopupErrorWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/slider_in_down</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>
