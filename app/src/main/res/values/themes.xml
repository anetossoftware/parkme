<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Parkme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/noteBackgroundColor</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="notePrimaryColor">@color/colorPrimary</item>
        <item name="noteSecondaryColor">@color/colorSecondary</item>
        <item name="noteBackgroundColor">@color/colorBackground</item>
        <item name="noteSurfaceColor">@color/colorSurface</item>
        <item name="snackbarStyle">@style/Snackbar</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextView</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">?attr/noteBackgroundColor</item>
        <item name="android:statusBarColor">?attr/noteBackgroundColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:colorPrimary">?attr/notePrimaryColor</item>
        <item name="android:navigationBarColor">?attr/noteBackgroundColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:colorControlActivated">?attr/notePrimaryColor</item>
        <item name="android:colorControlHighlight">?attr/noteSurfaceColor</item>
        <item name="android:textColorHighlight">?attr/noteSurfaceColor</item>
        <item name="android:colorControlNormal">?attr/notePrimaryColor</item>
        <item name="android:textColorHint">?attr/noteSecondaryColor</item>
        <item name="hintTextColor">?attr/noteSecondaryColor</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="notePrimaryColor">@color/colorPrimary</item>
        <item name="noteSecondaryColor">@color/colorSecondary</item>
        <item name="noteBackgroundColor">@color/colorBackground</item>
        <item name="noteSurfaceColor">@color/colorSurface</item>
        <item name="snackbarStyle">@style/Snackbar</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextView</item>
    </style>

    <!-- Base application theme. -->
    <!-- Theme.AppCompat.Light.NoActionBar -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->
        <item name="android:actionMenuTextAppearance">@style/LowerCaseMenuTextAppearance</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/white</item>-->
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="android:textSize">18sp</item>-->
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LowerCaseMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorOrange</item>
    </style>

    <style name="CustomActiviyAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- &lt;!&ndash; specify enter and exit transitions &ndash;&gt;
         <item name="android:windowEnterTransition">@transition/explode</item>
         <item name="android:windowExitTransition">@transition/explode</item>

         &lt;!&ndash; specify shared element transitions &ndash;&gt;
         <item name="android:windowSharedElementEnterTransition">
             @transition/change_image_transform</item>
         <item name="android:windowSharedElementExitTransition">
             @transition/change_image_transform</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_white</item>
    </style>

    <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?attr/noteBackgroundColor</item>
        <item name="liftOnScroll">true</item>
        <item name="android:elevation">@dimen/elevation_normal</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.TextView">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginEnd">@dimen/spacing_normal</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="layout_collapseMode">pin</item>
        <item name="titleTextColor">?attr/notePrimaryColor</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/size_large</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
    </style>

    <style name="CollapsingToolbarExpandedTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/collapsing_toolbar_expanded_text</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
    </style>

    <style name="CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="android:fitsSystemWindows">false</item>
        <item name="collapsedTitleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="expandedTitleTextAppearance">
            @style/CollapsingToolbarExpandedTitleTextAppearance
        </item>
        <item name="layout_scrollFlags">scroll|snap|exitUntilCollapsed</item>
        <item name="expandedTitleGravity">center</item>
        <item name="expandedTitleMarginStart">@dimen/spacing_normal</item>
        <item name="expandedTitleMarginEnd">@dimen/spacing_normal</item>
        <item name="expandedTitleMarginTop">@dimen/spacing_normal</item>
        <item name="expandedTitleMarginBottom">@dimen/spacing_normal</item>
    </style>

    <style name="SubtitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_tiny</item>
        <item name="fontFamily">@font/nunito_semibold_italic</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/noteBackgroundColor</item>
    </style>

    <style name="BaseDialogFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_shape</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:elevation">@dimen/elevation_extra_large</item>
    </style>

    <style name="DialogTitle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:textSize">@dimen/size_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogItem" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:background">@drawable/dialog_item_shape</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
    </style>
    <!--<style name="DialogItem" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/size_extra_small</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:background">@drawable/dialog_quick_item_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
    </style>-->

    <style name="DialogSectionItem" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/size_extra_small</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
    </style>

    <style name="NoteTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NoteBodyTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/size_tiny</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NoteCreationDateTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/noteSecondaryColor</item>
        <item name="android:textSize">@dimen/size_extra_tiny</item>
        <item name="fontFamily">@font/nunito_semibold_italic</item>
    </style>

    <style name="NoteTitleEditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/size_huge</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:textColorHint">?attr/noteSecondaryColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="NoteBodyEditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="PlaceholderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_extra_huge</item>
        <item name="android:textColor">?attr/noteSecondaryColor</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?attr/noteSurfaceColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing_small</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColorHint">?attr/noteSecondaryColor</item>
        <item name="android:textColorHighlight">?attr/noteSecondaryColor</item>
        <item name="android:colorControlActivated">?attr/notePrimaryColor</item>
    </style>

    <style name="LabelItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_normal</item>
        <item name="android:background">@drawable/label_item_shape</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textDirection">anyRtl</item>
    </style>

    <style name="LabelItemWithoutStoke" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_normal</item>
        <item name="android:background">@drawable/label_item_shape_without_stroke</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textDirection">anyRtl</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="AddressTextInputEditText">
        <item name="android:focusable">true</item>
        <item name="android:autoLink">all</item>
        <item name="android:gravity">top</item>
        <item name="android:minLines">4</item>
        <item name="maxLines">5</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/notePrimaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/noteBackgroundColor</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">@dimen/spacing_small</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="MaterialSecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">?attr/noteBackgroundColor</item>
        <item name="strokeColor">?attr/notePrimaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/notePrimaryColor</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">@dimen/spacing_small</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="ProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="android:contentDescription">@string/loading</item>
        <item name="indicatorColor">?attr/notePrimaryColor</item>
        <item name="indicatorSize">50dp</item>
        <item name="trackColor">?attr/noteBackgroundColor</item>
        <item name="trackCornerRadius">@dimen/spacing_extra_large</item>
        <item name="trackThickness">5dp</item>
    </style>

    <style name="Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@dimen/spacing_normal</item>
    </style>

    <style name="SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

</resources>