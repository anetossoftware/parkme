    <style name="BaseTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:statusBarColor">?attr/appBackgroundColor</item>

        <item name="android:windowBackground">?attr/appBackgroundColor</item>

        <item name="android:colorControlActivated">?attr/appPrimaryColor</item>
        <item name="android:colorControlHighlight">?attr/appSurfaceColor</item>
        <item name="android:textColorHighlight">@color/colorTextHighlight</item>
        <item name="android:colorControlNormal">?attr/appPrimaryColor</item>
        <item name="android:textColorHint">?attr/appSecondaryColor</item>
        <item name="hintTextColor">?attr/appSecondaryColor</item>

        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="fontFamily">@font/nunito_medium</item>

        <item name="appPrimaryColor">@color/colorPrimary</item>
        <item name="appSecondaryColor">@color/colorSecondary</item>
        <item name="appBackgroundColor">@color/colorBackground</item>
        <item name="appSurfaceColor">@color/colorSurface</item>

        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Primary</item>
        <item name="snackbarStyle">@style/Snackbar</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextView</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LowerCaseMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorOrange</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_white</item>
    </style>

    <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?attr/appBackgroundColor</item>
        <item name="liftOnScroll">true</item>
        <item name="android:elevation">@dimen/elevation_normal</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginEnd">@dimen/spacing_normal</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="layout_collapseMode">pin</item>
        <item name="titleTextColor">?attr/appPrimaryColor</item>
    </style>

    <style name="ToolbarWithSubtitle" parent="Toolbar">
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/size_large</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
    </style>

    <style name="CollapsingToolbarExpandedTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/collapsing_toolbar_expanded_text</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
    </style>

    <style name="CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="android:fitsSystemWindows">false</item>
        <item name="collapsedTitleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="expandedTitleTextAppearance">
            @style/CollapsingToolbarExpandedTitleTextAppearance
        </item>
        <item name="layout_scrollFlags">scroll|snap|exitUntilCollapsed</item>
        <item name="expandedTitleGravity">center</item>
        <item name="expandedTitleMarginStart">@dimen/spacing_normal</item>
        <item name="expandedTitleMarginEnd">@dimen/spacing_normal</item>
        <item name="expandedTitleMarginTop">@dimen/spacing_normal</item>
        <item name="expandedTitleMarginBottom">@dimen/spacing_normal</item>
    </style>

    <style name="SubtitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_tiny</item>
        <item name="fontFamily">@font/nunito_semibold_italic</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">end</item>
    </style>

